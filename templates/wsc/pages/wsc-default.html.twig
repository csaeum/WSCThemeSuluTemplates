{% extends "base.html.twig" %}

{#
    WSC Default Page Template
    Lädt alle globalen Einstellungen aus dem wsc_header Snippet
#}

{% set settings = sulu_snippet_load_by_area('global_settings') %}

{% block topbar %}
    {% include 'wsc/parts/top-bar.html.twig' with { settings: settings } %}
{% endblock %}

{% block header %}
    {% include 'wsc/parts/main-header.html.twig' with { settings: settings } %}
{% endblock %}

{% block content %}
    {# Seiten-Blöcke rendern #}
    {% for block in content.blocks|default([]) %}
        {% include 'wsc/blocks/' ~ block.type ~ '.html.twig' with block %}
    {% endfor %}
{% endblock %}

{% block footer %}
    {% include 'wsc/parts/footer.html.twig' with { settings: settings } %}
{% endblock %}