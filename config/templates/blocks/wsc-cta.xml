                            </param>
                            <param name="bg-light">
                                <meta><title lang="de">Hell</title></meta>
                            </param>
                            <param name="bg-dark">
                                <meta><title lang="de">Dunkel</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Hero-Styling (für Hero-Typ) -->
        <section name="hero_styling">
            <meta>
                <title lang="de">Hero / Banner Styling</title>
                <title lang="en">Hero / Banner Styling</title>
            </meta>
            <properties>
                <property name="hero_min_height" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Minimale Höhe</title>
                        <title lang="en">Minimum Height</title>
                    </meta>
                    <params>
                        <param name="default_value" value="400px"/>
                        <param name="values" type="collection">
                            <param name="300px">
                                <meta><title lang="de">300px (Klein)</title></meta>
                            </param>
                            <param name="400px">
                                <meta><title lang="de">400px (Mittel)</title></meta>
                            </param>
                            <param name="500px">
                                <meta><title lang="de">500px (Groß)</title></meta>
                            </param>
                            <param name="600px">
                                <meta><title lang="de">600px (Sehr groß)</title></meta>
                            </param>
                            <param name="100vh">
                                <meta><title lang="de">100vh (Volle Bildschirmhöhe)</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="hero_overlay" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Overlay (Abdunklung)</title>
                        <title lang="en">Overlay (Darkening)</title>
                    </meta>
                    <params>
                        <param name="default_value" value="dark"/>
                        <param name="values" type="collection">
                            <param name="none">
                                <meta><title lang="de">Kein Overlay</title></meta>
                            </param>
                            <param name="dark">
                                <meta><title lang="de">Dunkel</title></meta>
                            </param>
                            <param name="light">
                                <meta><title lang="de">Hell</title></meta>
