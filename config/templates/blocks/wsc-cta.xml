                        <title lang="en">Text Color</title>
                    </meta>
                    <params>
                        <param name="default_value" value="text-white"/>
                        <param name="values" type="collection">
                            <param name="text-white">
                                <meta><title lang="de">Weiß</title></meta>
                            </param>
                            <param name="text-dark">
                                <meta><title lang="de">Dunkel</title></meta>
                            </param>
                            <param name="text-primary">
                                <meta><title lang="de">Primär</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Margin Abschnitt -->
        <section name="margin">
            <meta>
                <title lang="de">Außenabstand (Margin)</title>
                <title lang="en">Margin</title>
            </meta>
            <properties>
                <property name="margin_top" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Oben</title>
                    </meta>
                    <params>
                        <param name="default_value" value="mt-3"/>
                        <param name="values" type="collection">
                            <param name="mt-0"><meta><title lang="de">0</title></meta></param>
                            <param name="mt-1"><meta><title lang="de">1</title></meta></param>
                            <param name="mt-2"><meta><title lang="de">2</title></meta></param>
                            <param name="mt-3"><meta><title lang="de">3</title></meta></param>
                            <param name="mt-4"><meta><title lang="de">4</title></meta></param>
                            <param name="mt-5"><meta><title lang="de">5</title></meta></param>
                            <param name="mt-auto"><meta><title lang="de">Auto</title></meta></param>
