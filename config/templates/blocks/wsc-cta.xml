                                <meta><title lang="de">60%</title></meta>
                            </param>
                            <param name="0.7">
                                <meta><title lang="de">70%</title></meta>
                            </param>
                            <param name="0.8">
                                <meta><title lang="de">80%</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

