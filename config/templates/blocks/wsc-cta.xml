                            <param name="primary">
                                <meta><title lang="de">Primär-Farbe</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="hero_overlay_opacity" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Overlay-Deckkraft</title>
