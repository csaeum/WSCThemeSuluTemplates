                            </param>
                        </param>
                    </params>
                </property>

                <property name="padding_end" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Rechts</title>
                    </meta>
                    <params>
                        <param name="default_value" value="pe-0"/>
                        <param name="values" type="collection">
                            <param name="pe-0">
                                <meta><title lang="de">0</title></meta>
                            </param>
                            <param name="pe-1">
                                <meta><title lang="de">1 (0.25rem)</title></meta>
                            </param>
                            <param name="pe-2">
                                <meta><title lang="de">2 (0.5rem)</title></meta>
                            </param>
                            <param name="pe-3">
                                <meta><title lang="de">3 (1rem)</title></meta>
                            </param>
                            <param name="pe-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="pe-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Erweitert Abschnitt -->
        <section name="advanced">
            <meta>
                <title lang="de">Erweitert</title>
                <title lang="en">Advanced</title>
            </meta>
            <properties>
                <property name="css_class" type="text_line" colspan="6">
                    <meta>
                        <title lang="de">CSS-Klasse</title>
                        <title lang="en">CSS Class</title>
                    </meta>
                </property>

                <property name="html_id" type="text_line" colspan="6">
                    <meta>
                        <title lang="de">HTML-ID</title>
                        <title lang="en">HTML ID</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</template>
