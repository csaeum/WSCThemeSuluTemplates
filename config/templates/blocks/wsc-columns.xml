                            <param name="mb-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="mb-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                            <param name="mb-auto">
                                <meta><title lang="de">Auto</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="margin_start" type="single_select" colspan="3">
                    <meta>
