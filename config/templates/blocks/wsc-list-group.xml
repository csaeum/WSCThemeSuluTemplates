<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>wsc-list-group</key>

    <meta>
        <title lang="de">Aufzählung / Liste</title>
        <title lang="en">List Group</title>
    </meta>

    <properties>
        <!-- Listen-Einträge -->
        <block name="items" default-type="list_item" minOccurs="1">
            <meta>
                <title lang="de">Listen-Einträge</title>
                <title lang="en">List Items</title>
            </meta>
            <types>
                <type name="list_item">
                    <meta>
                        <title lang="de">Eintrag</title>
                        <title lang="en">Item</title>
                    </meta>
                    <properties>
                        <property name="text" type="text_line" mandatory="true" colspan="8">
                            <meta>
                                <title lang="de">Text</title>
                                <title lang="en">Text</title>
                            </meta>
                        </property>

                        <property name="icon" type="text_line" colspan="4">
                            <meta>
                                <title lang="de">Icon (z.B. fa-check)</title>
                                <title lang="en">Icon (e.g. fa-check)</title>
                            </meta>
                        </property>

                        <property name="item_color" type="single_select" colspan="6">
                            <meta>
                                <title lang="de">Farbe</title>
                                <title lang="en">Color</title>
                            </meta>
                            <params>
                                <param name="default_value" value=""/>
                                <param name="values" type="collection">
                                    <param name="">
                                        <meta><title lang="de">Standard</title></meta>
                                    </param>
                                    <param name="list-group-item-primary">
                                        <meta><title lang="de">Primär</title></meta>
                                    </param>
                                    <param name="list-group-item-secondary">
                                        <meta><title lang="de">Sekundär</title></meta>
                                    </param>
                                    <param name="list-group-item-success">
                                        <meta><title lang="de">Erfolg (Grün)</title></meta>
                                    </param>
                                    <param name="list-group-item-danger">
                                        <meta><title lang="de">Gefahr (Rot)</title></meta>
                                    </param>
                                    <param name="list-group-item-warning">
                                        <meta><title lang="de">Warnung (Gelb)</title></meta>
                                    </param>
                                    <param name="list-group-item-info">
                                        <meta><title lang="de">Info (Cyan)</title></meta>
                                    </param>
                                    <param name="list-group-item-light">
                                        <meta><title lang="de">Hell</title></meta>
                                    </param>
                                    <param name="list-group-item-dark">
                                        <meta><title lang="de">Dunkel</title></meta>
                                    </param>
                                </param>
                            </params>
                        </property>

                        <property name="item_active" type="checkbox" colspan="6">
                            <meta>
                                <title lang="de">Aktiv hervorheben</title>
                                <title lang="en">Highlight as active</title>
                            </meta>
                        </property>

                        <property name="item_css_class" type="text_line" colspan="12">
                            <meta>
                                <title lang="de">CSS-Klasse</title>
                                <title lang="en">CSS Class</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </block>

        <!-- Layout Abschnitt -->
        <section name="layout">
            <meta>
                <title lang="de">Layout</title>
                <title lang="en">Layout</title>
            </meta>
            <properties>
                <property name="list_type" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Listentyp</title>
                        <title lang="en">List Type</title>
                    </meta>
                    <params>
                        <param name="default_value" value="ul"/>
                        <param name="values" type="collection">
                            <param name="ul">
                                <meta><title lang="de">Ungeordnet (Punkte)</title></meta>
                            </param>
                            <param name="ol">
                                <meta><title lang="de">Nummeriert (1, 2, 3)</title></meta>
                            </param>
                            <param name="flush">
                                <meta><title lang="de">Ohne Rahmen (Flush)</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="list_horizontal" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Ausrichtung</title>
                        <title lang="en">Orientation</title>
                    </meta>
                    <params>
                        <param name="default_value" value=""/>
                        <param name="values" type="collection">
                            <param name="">
                                <meta><title lang="de">Vertikal</title></meta>
                            </param>
                            <param name="list-group-horizontal">
                                <meta><title lang="de">Horizontal</title></meta>
                            </param>
                            <param name="list-group-horizontal-sm">
                                <meta><title lang="de">Horizontal ab SM</title></meta>
                            </param>
                            <param name="list-group-horizontal-md">
                                <meta><title lang="de">Horizontal ab MD</title></meta>
                            </param>
                            <param name="list-group-horizontal-lg">
                                <meta><title lang="de">Horizontal ab LG</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="show_border" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">Mit Rahmen</title>
                        <title lang="en">Show Border</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Margin Abschnitt -->
        <section name="margin">
            <meta>
                <title lang="de">Außenabstand (Margin)</title>
                <title lang="en">Margin</title>
            </meta>
            <properties>
                <property name="margin_top" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Oben</title>
                    </meta>
                    <params>
                        <param name="default_value" value="mt-3"/>
                        <param name="values" type="collection">
                            <param name="mt-0">
                                <meta><title lang="de">0</title></meta>
                            </param>
                            <param name="mt-1">
                                <meta><title lang="de">1 (0.25rem)</title></meta>
                            </param>
                            <param name="mt-2">
                                <meta><title lang="de">2 (0.5rem)</title></meta>
                            </param>
                            <param name="mt-3">
                                <meta><title lang="de">3 (1rem)</title></meta>
                            </param>
                            <param name="mt-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="mt-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                            <param name="mt-auto">
                                <meta><title lang="de">Auto</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="margin_bottom" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Unten</title>
                    </meta>
                    <params>
                        <param name="default_value" value="mb-3"/>
                        <param name="values" type="collection">
                            <param name="mb-0">
                                <meta><title lang="de">0</title></meta>
                            </param>
                            <param name="mb-1">
                                <meta><title lang="de">1 (0.25rem)</title></meta>
                            </param>
                            <param name="mb-2">
                                <meta><title lang="de">2 (0.5rem)</title></meta>
                            </param>
                            <param name="mb-3">
                                <meta><title lang="de">3 (1rem)</title></meta>
                            </param>
                            <param name="mb-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="mb-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                            <param name="mb-auto">
                                <meta><title lang="de">Auto</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="margin_start" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Links</title>
                    </meta>
                    <params>
                        <param name="default_value" value="ms-0"/>
                        <param name="values" type="collection">
                            <param name="ms-0">
                                <meta><title lang="de">0</title></meta>
                            </param>
                            <param name="ms-1">
                                <meta><title lang="de">1 (0.25rem)</title></meta>
                            </param>
                            <param name="ms-2">
                                <meta><title lang="de">2 (0.5rem)</title></meta>
                            </param>
                            <param name="ms-3">
                                <meta><title lang="de">3 (1rem)</title></meta>
                            </param>
                            <param name="ms-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="ms-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                            <param name="ms-auto">
                                <meta><title lang="de">Auto</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="margin_end" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Rechts</title>
                    </meta>
                    <params>
                        <param name="default_value" value="me-0"/>
                        <param name="values" type="collection">
                            <param name="me-0">
                                <meta><title lang="de">0</title></meta>
                            </param>
                            <param name="me-1">
                                <meta><title lang="de">1 (0.25rem)</title></meta>
                            </param>
                            <param name="me-2">
                                <meta><title lang="de">2 (0.5rem)</title></meta>
                            </param>
                            <param name="me-3">
                                <meta><title lang="de">3 (1rem)</title></meta>
                            </param>
                            <param name="me-4">
                                <meta><title lang="de">4 (1.5rem)</title></meta>
                            </param>
                            <param name="me-5">
                                <meta><title lang="de">5 (3rem)</title></meta>
                            </param>
                            <param name="me-auto">
                                <meta><title lang="de">Auto</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Padding Abschnitt -->
        <section name="padding">
            <meta>
                <title lang="de">Innenabstand (Padding)</title>
                <title lang="en">Padding</title>
            </meta>
            <properties>
                <property name="padding_top" type="single_select" colspan="3">
