                            </param>
                            <param name="sulu-260x">
                                <meta><title lang="de">Breit (260px)</title></meta>
                            </param>
                            <param name="sulu-400x400">
                                <meta><title lang="de">Groß (400x400)</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="image_rounded" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Bild-Ecken</title>
                        <title lang="en">Image Corners</title>
                    </meta>
                    <params>
                        <param name="default_value" value=""/>
                        <param name="values" type="collection">
                            <param name="">
