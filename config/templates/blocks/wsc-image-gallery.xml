                            </param>
                            <param name="g-1">
                                <meta><title lang="de">Sehr klein</title></meta>
                            </param>
                            <param name="g-2">
                                <meta><title lang="de">Klein</title></meta>
                            </param>
                            <param name="g-3">
                                <meta><title lang="de">Normal</title></meta>
                            </param>
                            <param name="g-4">
                                <meta><title lang="de">Groß</title></meta>
                            </param>
                            <param name="g-5">
                                <meta><title lang="de">Sehr groß</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
