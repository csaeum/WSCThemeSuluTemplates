                </property>

                <property name="slider_arrows" type="checkbox" colspan="3">
                    <meta>
                        <title lang="de">Pfeile anzeigen</title>
                        <title lang="en">Show Arrows</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
