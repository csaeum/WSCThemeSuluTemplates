                            </param>
                        </param>
                    </params>
                </property>

                <property name="enable_lightbox" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">Lightbox / Fullbild aktivieren</title>
                        <title lang="en">Enable Lightbox / Fullscreen</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="show_caption" type="checkbox" colspan="6">
                    <meta>
                        <title lang="de">Bildunterschrift anzeigen</title>
                        <title lang="en">Show Caption</title>
                    </meta>
                    <params>
                        <param name="default_value" value="false"/>
