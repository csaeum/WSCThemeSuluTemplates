            <meta>
                <title lang="de">Layout</title>
                <title lang="en">Layout</title>
            </meta>
            <properties>
                <property name="display_mode" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Darstellung</title>
                        <title lang="en">Display Mode</title>
                    </meta>
                    <params>
                        <param name="default_value" value="single"/>
                        <param name="values" type="collection">
                            <param name="single">
                                <meta><title lang="de">Einzelbild</title></meta>
                            </param>
                            <param name="grid">
                                <meta><title lang="de">Grid</title></meta>
                            </param>
                            <param name="masonry">
                                <meta><title lang="de">Masonry</title></meta>
                            </param>
                            <param name="slider">
                                <meta><title lang="de">Slider / Carousel</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="columns" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Spalten (Grid/Masonry)</title>
                        <title lang="en">Columns (Grid/Masonry)</title>
                    </meta>
                    <params>
                        <param name="default_value" value="3"/>
                        <param name="values" type="collection">
                            <param name="2">
                                <meta><title lang="de">2 Spalten</title></meta>
                            </param>
                            <param name="3">
                                <meta><title lang="de">3 Spalten</title></meta>
                            </param>
                            <param name="4">
                                <meta><title lang="de">4 Spalten</title></meta>
                            </param>
                            <param name="6">
                                <meta><title lang="de">6 Spalten</title></meta>
                            </param>
