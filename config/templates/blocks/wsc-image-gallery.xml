                </property>

                <property name="slider_indicators" type="checkbox" colspan="3">
                    <meta>
                        <title lang="de">Indikatoren anzeigen</title>
                        <title lang="en">Show Indicators</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="slider_interval" type="single_select" colspan="3">
                    <meta>
                        <title lang="de">Intervall</title>
                        <title lang="en">Interval</title>
                    </meta>
                    <params>
                        <param name="default_value" value="5000"/>
                        <param name="values" type="collection">
                            <param name="2000">
                                <meta><title lang="de">2 Sekunden</title></meta>
                            </param>
                            <param name="3000">
                                <meta><title lang="de">3 Sekunden</title></meta>
                            </param>
                            <param name="5000">
                                <meta><title lang="de">5 Sekunden</title></meta>
                            </param>
                            <param name="7000">
                                <meta><title lang="de">7 Sekunden</title></meta>
                            </param>
                            <param name="10000">
                                <meta><title lang="de">10 Sekunden</title></meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <!-- Margin Abschnitt -->
