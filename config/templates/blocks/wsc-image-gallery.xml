    <key>wsc-image-gallery</key>

    <meta>
        <title lang="de">Bild / Galerie</title>
        <title lang="en">Image / Gallery</title>
    </meta>

    <properties>
        <property name="images" type="media_selection" mandatory="true">
            <meta>
                <title lang="de">Bilder</title>
                <title lang="en">Images</title>
            </meta>
            <params>
                <param name="types" value="image"/>
