                        <title lang="de">Abstand (Grid/Masonry)</title>
                        <title lang="en">Gutter (Grid/Masonry)</title>
                    </meta>
                    <params>
                        <param name="default_value" value="g-3"/>
                        <param name="values" type="collection">
                            <param name="g-0">
