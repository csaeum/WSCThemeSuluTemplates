    <key>wsc-smart-content</key>

    <meta>
        <title lang="de">Smart Content</title>
        <title lang="en">Smart Content</title>
    </meta>

    <properties>
        <property name="title" type="text_line" colspan="8">
            <meta>
                <title lang="de">Überschrift (optional)</title>
                <title lang="en">Headline (optional)</title>
            </meta>
        </property>

        <property name="title_icon" type="text_line" colspan="4">
            <meta>
                <title lang="de">Icon (z.B. fa-star)</title>
                <title lang="en">Icon (e.g. fa-star)</title>
            </meta>
        </property>

        <property name="smart_content" type="smart_content" mandatory="true">
            <meta>
                <title lang="de">Inhalte</title>
                <title lang="en">Contents</title>
            </meta>
            <params>
                <param name="provider" value="pages"/>
                <param name="max_per_page" value="12"/>
                <param name="page_parameter" value="p"/>
                <param name="properties" type="collection">
                    <param name="title" value="title"/>
                    <param name="url" value="url"/>
                    <param name="excerptTitle" value="excerpt.title"/>
                    <param name="excerptDescription" value="excerpt.description"/>
                    <param name="excerptImages" value="excerpt.images"/>
                    <param name="authored" value="authored"/>
                </param>
            </params>
        </property>

        <!-- Layout Abschnitt -->
        <section name="layout">
            <meta>
                <title lang="de">Layout</title>
                <title lang="en">Layout</title>
            </meta>
            <properties>
                <property name="display_mode" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Darstellung</title>
                        <title lang="en">Display Mode</title>
                    </meta>
                    <params>
                        <param name="default_value" value="list"/>
                        <param name="values" type="collection">
                            <param name="list">
                                <meta><title lang="de">Liste</title></meta>
                            </param>
                            <param name="grid-2">
                                <meta><title lang="de">Grid (2 Spalten)</title></meta>
                            </param>
                            <param name="grid-3">
                                <meta><title lang="de">Grid (3 Spalten)</title></meta>
                            </param>
                            <param name="grid-4">
                                <meta><title lang="de">Grid (4 Spalten)</title></meta>
                            </param>
                            <param name="cards-2">
                                <meta><title lang="de">Cards (2 Spalten)</title></meta>
                            </param>
                            <param name="cards-3">
                                <meta><title lang="de">Cards (3 Spalten)</title></meta>
                            </param>
                            <param name="cards-4">
                                <meta><title lang="de">Cards (4 Spalten)</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="show_image" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">Bild anzeigen</title>
                        <title lang="en">Show Image</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="show_excerpt" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">Teaser-Text anzeigen</title>
                        <title lang="en">Show Excerpt</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="show_date" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">Datum anzeigen</title>
                        <title lang="en">Show Date</title>
                    </meta>
                    <params>
                        <param name="default_value" value="false"/>
                    </params>
                </property>

                <property name="show_more_link" type="checkbox" colspan="4">
                    <meta>
                        <title lang="de">"Mehr lesen" Link</title>
                        <title lang="en">"Read more" Link</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>

                <property name="more_link_text" type="text_line" colspan="4">
                    <meta>
                        <title lang="de">Link-Text</title>
                        <title lang="en">Link Text</title>
                    </meta>
                    <params>
                        <param name="default_value" value="Mehr lesen"/>
                    </params>
                </property>
            </properties>
        </section>

