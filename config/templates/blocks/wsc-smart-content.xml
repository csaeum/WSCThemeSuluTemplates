                            </param>
                            <param name="text-dark">
                                <meta><title lang="de">Dunkel</title></meta>
                            </param>
                            <param name="text-muted">
                                <meta><title lang="de">Gedämpft</title></meta>
                            </param>
                        </param>
                    </params>
                </property>

                <property name="gutter" type="single_select" colspan="4">
                    <meta>
                        <title lang="de">Abstand zwischen Elementen</title>
                        <title lang="en">Gutter</title>
                    </meta>
                    <params>
                        <param name="default_value" value="g-4"/>
